REPORT  Z_DSODATECHANGE.

DATA: BEGIN OF spfli_struc,
         index  TYPE i,
         spfli_wa TYPE spfli,
      END OF spfli_struc.

DATA: ITAB_DSO1 TYPE SORTED TABLE OF /BIC/AZRDSLDSO00 WITH UNIQUE KEY /BIC/Z_RDRTPID.

DATA: WA_DSO1 TYPE /BIC/AZRDSLDSO00.

DATA: DATE TYPE D.
SELECT * FROM /BIC/AZRDSLDSO00 INTO TABLE ITAB_DSO1.

*LOOP AT ITAB_DSO1 INTO WA_DSO1.
*  WRITE:/ WA_DSO1-/BIC/Z_RDRTSID, WA_DSO1-/BIC/Z_RDRTPID, WA_DSO1-/BIC/Z_RDRTDTE.
*ENDLOOP.

LOOP AT ITAB_DSO1 INTO WA_DSO1.
  CALL FUNCTION 'ZRIVULASTDATE'
  EXPORTING
    DATE = WA_DSO1-/BIC/Z_RDRTDTE
  IMPORTING
    LASTDATE = WA_DSO1-/BIC/Z_RDRTDTE.
MODIFY ITAB_DSO1 FROM WA_DSO1.
ENDLOOP.

LOOP AT ITAB_DSO1 INTO WA_DSO1.
  WRITE:/ WA_DSO1-/BIC/Z_RDRTSID, WA_DSO1-/BIC/Z_RDRTPID, WA_DSO1-/BIC/Z_RDRTDTE.
ENDLOOP.
